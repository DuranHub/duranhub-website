---
interface Props {
  menu: {
    items: {
      title: string;
      url: string | null;
    }[];
  };
}

const { menu } = Astro.props;

const menus = menu.items
---

<section
  class="flex-col md:flex-row flex items-center md:justify-between mt-16 mb-16 md:mb-12"
>
  <h1
    class="text-6xl md:text-6xl font-bold tracking-tighter leading-tight md:pr-8"
  >
    Drupal ❤️ Astro
  </h1>
  <div class="text-center md:text-left text-lg mt-5 md:pl-8">
    <ul class="flex">
      {
        menus.map((item) => (
          <li class="mr-6">
            <a href={item.url}>{item.title}</a>
          </li>
        ))
      }
    </ul>
  </div>
</section>
